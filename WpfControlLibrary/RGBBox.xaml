<UserControl x:Class="WpfControlLibrary.RGBBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary"
             mc:Ignorable="d" Height="20" Width="44">
    <Grid HorizontalAlignment="Left" Width="132">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="text" TextWrapping="Wrap" VerticalAlignment="Center" Height="20" HorizontalAlignment="Center" Width="44" FontSize="14" FontWeight="Normal" TextChanged="TextBox_TextChanged" PreviewKeyDown="text_PreviewKeyDown">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Вставить"  Click="Paste_Click"></MenuItem>
                    <MenuItem Header="Копировать" Click="Copy_Click"></MenuItem>
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>

    </Grid>
</UserControl>
